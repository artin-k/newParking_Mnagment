<Window x:Class="WpfTest.payment_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="payment_form" Height="450" Width="1000" Background="#bdc3c7">

    <Grid Margin="10,10,10,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <!-- DataGrid takes most space -->
            <ColumnDefinition Width="1*" />
            <!-- Button takes less space -->
        </Grid.ColumnDefinitions>


        <DataGrid x:Name="carDataGrid" 
                  Visibility="Hidden"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Plate" Binding="{Binding Plate}" />
                <DataGridTextColumn Header="Specification" Binding="{Binding Specification}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" />
                <DataGridTextColumn Header="Type" Binding="{Binding VehicleType}" />
                <DataGridTextColumn Header="Park Place" Binding="{Binding ParkPlace}" />
                <DataGridTextColumn Header="Entry Time" Binding="{Binding EntryTime}" />
                <DataGridTextColumn Header="Exit Time" Binding="{Binding ExitTime}" />
                <DataGridTextColumn Header="Fee" Binding="{Binding PaymentAmount}" />
                <DataGridTextColumn Header="IsExited" Binding="{Binding IsExited}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Button next to the grid -->
        <Button x:Name="ExitedCarBtn"
            Content="View Cars"
            Grid.Column="1"
            Width="100"
            Height="40"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Click="ExistedCarBtn_Click">

            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA1A1A1" Offset="0.26"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="paymentsBtn"
                Content="set payment"
                Grid.Column="1"
                Width="100"
                Height="40"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Click="paymentBtn_Click"
                RenderTransformOrigin="0.554,2.456" Margin="0,94,0,0">

            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA1A1A1" Offset="0.26"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <StackPanel x:Name="payStack" 
              Visibility="Visible"
              Grid.Column="0"                                     
              Margin="0,0,10,10">
            <StackPanel Orientation="Horizontal" Height="22" RenderTransformOrigin="50.50,0.5" Width="270">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                
                <RadioButton x:Name="radioCar" Content="Car" GroupName="vehicleType" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="radioMotorbike" Content="Motorbike" GroupName="vehicleType" Checked="RadioButton_Checked"/>
            </StackPanel>
            <local:PlaceholderTextBox x:Name="txtMotorPlate" MaxLength="7" PlaceholderText=" پلاک موتور" Width="306" Visibility="Visible"/>
            <StackPanel x:Name="normalPlate" Orientation="Horizontal" Visibility="Visible" Width="262">
                <TextBox x:Name="txtPlatePart1" Width="40" MaxLength="2" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbPlateLetter" Width="60" Margin="0,0,5,0">
                    <ComboBoxItem Content="ب" IsSelected="True"/>
                    <ComboBoxItem Content="ج"/>
                    <ComboBoxItem Content="د"/>
                    <ComboBoxItem Content="س"/>
                    <ComboBoxItem Content="ص"/>
                    <ComboBoxItem Content="ط"/>
                    <ComboBoxItem Content="ق"/>
                    <ComboBoxItem Content="ل"/>
                    <ComboBoxItem Content="م"/>
                    <ComboBoxItem Content="ن"/>
                    <ComboBoxItem Content="ه"/>
                    <ComboBoxItem Content="ی"/>
                    <ComboBoxItem Content="الف"/>
                    <ComboBoxItem Content="پ"/>
                    <ComboBoxItem Content="ت"/>
                    <ComboBoxItem Content="ع"/>
                </ComboBox>
                <TextBox x:Name="txtPlatePart2" Width="60" MaxLength="3"/>
            </StackPanel>

            <StackPanel Margin="200">
                <Label x:Name="lblPayment"
                Content="amount" Width="71"

                   />
                <Button x:Name="btnCalcPayment"
                           Content="Calculate payment"
                           Width="120"
                           Padding="10,5"

                           Click="CalcPayment_click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF4B627C" Offset="0.234"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>



        </StackPanel>

        <StackPanel x:Name="CarGridOptions" Orientation="Horizontal" HorizontalAlignment="Left" Margin="587,372,0,10" Visibility="Hidden">

            <Button Content="Update" Width="100" Margin="5" Click="Update_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA1A1A1" Offset="0.26"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button Content="Delete" Width="100" Margin="5" Click="Delete_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA1A1A1" Offset="0.26"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
