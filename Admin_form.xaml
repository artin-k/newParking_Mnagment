<Window x:Class="WpfTest.Admin_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="Admin_form" 
        Height="450" 
        Width="800">

    <Grid Background="#707b7c" 
          Height="495" 
          VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <GroupBox 
          x:Name="managerPanel" 
          Visibility="Hidden" 
          Header="set manager Panel" 
          Margin="26,71,486,0" 
          Grid.Column="1" 
          Height="412" 
          VerticalAlignment="Top" Grid.RowSpan="3">

            <StackPanel Margin="6,0,-6,0" >

                <local:PlaceholderTextBox x:Name="txtFullName" MaxLength="40" PlaceholderText="نام و نام خانوادگی" Margin="10"/>
                <local:PlaceholderTextBox x:Name="txtUsername" MaxLength="20" PlaceholderText="کد ملی" Margin="10"/>
                <local:PlaceholderTextBox x:Name="txtPassword" MaxLength="50" PlaceholderText="رمز عبور" Margin="10"/>

                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">

                    <Button x:Name="btnSave"
                            Content="ذخیره"
                            Width="120"
                            Margin="10"
                            Padding="10,5"
                            Click="saveManager_click"
                            />
                    <Button x:Name="btnCancel"
                            Content="لغو"
                            Width="120"
                            Margin="10"
                            Padding="10,5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <DataGrid x:Name="managerDataGrid"
          AutoGenerateColumns="False"
          IsReadOnly="False"
          Visibility="Visible"
          CanUserAddRows="False"
          SelectionMode="Single"
          SelectionUnit="FullRow"
          Margin="10,15,177,227"
          ItemsSource="{Binding allManagers}" Grid.ColumnSpan="2" Grid.RowSpan="2">

            <DataGrid.Columns>
                <DataGridTextColumn Header="name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Username" Binding="{Binding NationalCode}" />
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" />

            </DataGrid.Columns>
        </DataGrid>

        <Button Content="set manager" 
                HorizontalAlignment="Left" 
                Height="53" 
                Margin="628,0,0,12" 
                VerticalAlignment="Bottom" 
                Background="#b3b6b7"
                Width="132" 
                Click="setManager_Click"
                Grid.Column="1">
        </Button>

        <Button Content="view managers" 
            HorizontalAlignment="Left" 
            Height="53" 
            Margin="628,0,0,316" 
            VerticalAlignment="Bottom" 
            Background="#b3b6b7"
            Width="132" 
            Click="viewManagers_Click"
            Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
