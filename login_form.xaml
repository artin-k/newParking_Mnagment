<Window x:Class="WpfTest.login_form" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="login_form" Height="450" Width="800" >

    <Grid Background="#707b7c">

        <Border 
           Width="314" 
           Padding="20" 
           Background="#616a6b" 
           CornerRadius="12" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="178">


            <StackPanel>

                <!-- Username Input -->

                <!-- Password Wrapper -->

                <!-- Password Wrapper -->
                <local:PlaceholderTextBox
                    x:Name="txtUsername" 
                    MaxLength="20" 
                    PlaceholderText="نام کاربری"
                    Width="186" RenderTransformOrigin="0.504,0.501" Height="32"/>

                <!-- Password Wrapper -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="163*"/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox x:Name="passTxt"
                     MaxLength="20"
                     GotFocus="PasswordBox_GotFocus"
                     PasswordChanged="passTxt_PasswordChanged"
                     Height="32"
                     Padding="8,0"
                     FontSize="14" Grid.ColumnSpan="2"/>

                    <TextBlock x:Name="passwordPlaceholder"
                        Text="رمز عبور"
                        FontSize="14"
                        Foreground="Gray"
                        VerticalAlignment="Center"
                        Margin="10,0,-2,0"
                        IsHitTestVisible="True"
                        MouseLeftButtonUp="passPlaceHolder"
                        Visibility="Visible" Height="32" Grid.ColumnSpan="2" RenderTransformOrigin="0.498,0.476"/>
                </Grid>
                <Button Content="ورود"
                    Height="36"
                    Background="#0078D7"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="loginBtn_Click"/>

                

                <!-- Login Button -->

            </StackPanel>

        </Border>
        <CheckBox x:Name="ManagerCheck"
            Content="login as manager"
                  HorizontalAlignment="Left"
                  Margin="337,334,0,0"
                  VerticalAlignment="Top"/>
    </Grid>

</Window>