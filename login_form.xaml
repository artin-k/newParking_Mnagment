<Window x:Class="WpfTest.login_form" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="login_form" Height="450" Width="800" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" 
                   Text="ثبت نام" 
                   Foreground="Blue" 
                   HorizontalAlignment="Left"
                   Margin="31,229,0,0" 
                   VerticalAlignment="Top" 
                   Cursor="Hand"
                   MouseLeftButtonUp="registerBtn_Click">
            <TextBlock.TextDecorations>
                <TextDecoration Location="Underline"/>
            </TextBlock.TextDecorations>
        </TextBlock>

        <Button Grid.Column="1" 
                Content="ورود" 
                HorizontalAlignment="Left" 
                Margin="137,229,0,0" 
                VerticalAlignment="Top" 
                Cursor="Hand"
                RenderTransformOrigin="0.01,2.647"
                Click="loginBtn_Click"/>

        <PasswordBox x:Name="passTxt" 
                     MaxLength="20" 
                     GotFocus="PasswordBox_GotFocus" 
                     HorizontalAlignment="Left" 
                     Margin="30,153,0,0" 
                     VerticalAlignment="Top" 
                     Width="228" 
                     Grid.Column="1" 
                     Height="16"/>
        <PasswordBox/>

        <TextBlock x:Name="passwordPlaceholder" 
                   MouseLeftButtonUp ="passPlaceHolder"
                   Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="31,153,0,0" 
                   TextWrapping="Wrap" 
                   Cursor="Hand"
                   Text="رمز را وارد کنید" 
                   Foreground="Gray" 
                   VerticalAlignment="Top" 
                   Height="16" Width="79">
        </TextBlock>

        <TextBox x:Name="userTxt"
                 MaxLength="20"                 
                 GotFocus="UserName_GotFocus"                 
                 HorizontalAlignment="Left"
                 Margin="31,97,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="227" 
                 Grid.Column="1" 
                 Height="16">
        </TextBox>

        <TextBlock x:Name="usernamePlaceholder"
                   Grid.Column="1" 
                   MouseLeftButtonUp ="userPlaceHolder"
                   HorizontalAlignment="Left" 
                   Margin="31,97,0,0" 
                   TextWrapping="Wrap" 
                   Cursor="Hand"
                   Text="نام کاربری را وارد کنید" 
                   Foreground="Gray" 
                   VerticalAlignment="Top" 
                   Height="16"
                   Width="107">
        </TextBlock>



    </Grid>
</Window>