<Window x:Class="WpfTest.login_form" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"       
        Title="login_form" 
        Loaded="Window_Loaded"
        Height="500" 
        Width="350" >

    <Grid  HorizontalAlignment="Center" Width="400">
        <!-- Background Video -->
        <MediaElement Name="BackgroundVideo"
             Source="pack://siteoforigin:,,,/backgrounds/login.mp4"

              LoadedBehavior="Manual"
              UnloadedBehavior="Stop"
              Stretch="Fill"
              IsHitTestVisible="False"
              MediaEnded="BackgroundVideo_MediaEnded" />


        <Border 
           Width="224" 
           Padding="20" 
           
           CornerRadius="12" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Top" 
           Height="235" Margin="0,101,0,0">


            <StackPanel>

                <!-- Username Input -->

                <!-- Password Wrapper -->

                <!-- Password Wrapper -->
                <local:PlaceholderTextBox
                    x:Name="txtUsername" 
                    MaxLength="20" 
                    PlaceholderText="نام کاربری"
                    Width="185" 
                    RenderTransformOrigin="0.504,0.501" 
                    Height="32"/>

                <!-- Password Wrapper -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox x:Name="passTxt"
                     MaxLength="20"
                     GotFocus="PasswordBox_GotFocus"
                     PasswordChanged="passTxt_PasswordChanged"
                     Padding="8,0"
                     FontSize="14" 
                     Grid.ColumnSpan="2"/>

                    <TextBlock x:Name="passwordPlaceholder"
                        Text="رمز عبور"
                        FontSize="14"
                        Foreground="Gray"
                        Background="#d7dbdd"
                        VerticalAlignment="Center"
                        IsHitTestVisible="True"
                        MouseLeftButtonUp="passPlaceHolder"
                        Visibility="Visible" 
                        Height="32" 
                        Grid.ColumnSpan="2" 
                        RenderTransformOrigin="0.498,0.476"/>
                </Grid>
                <Button Content="ورود"
                    Height="36"
                    Background="#0078D7"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="loginBtn_Click"/>



                <!-- Login Button -->

            </StackPanel>

        </Border>
        <CheckBox x:Name="ManagerCheck"
            Content="login as manager"
                  HorizontalAlignment="Center"
                  Margin="0,226,0,0"
                  VerticalAlignment="Top"/>
    </Grid>

</Window>