<Window x:Class="WpfTest.manager_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="manager form" Height="500" Width="900">

    <Grid Margin="-42,-58,0,0" Height="594" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>

        <GroupBox x:Name="staffPanel" Visibility="Hidden" 
          Header="Staff Panel" 
          Margin="26,71,486,0" Grid.Column="1" Height="412" VerticalAlignment="Top">

            <StackPanel Margin="6,0,-6,0" >

                <local:PlaceholderTextBox x:Name="txtFullName" MaxLength="40" PlaceholderText="نام و نام خانوادگی" Margin="10"/>
                <local:PlaceholderTextBox x:Name="txtUsername" MaxLength="20" PlaceholderText="نام کاربری" Margin="10"/>
                <local:PlaceholderTextBox x:Name="txtPassword" MaxLength="50" PlaceholderText="رمز عبور" Margin="10"/>

                <ComboBox x:Name="comboRole" Margin="10">
                    <!-- to be customized -->
                    <ComboBoxItem Content="worker"/>
                </ComboBox>

                <local:PlaceholderTextBox x:Name="txtPhone" MaxLength="12" PlaceholderText="شماره تماس" Margin="10"/>
                <DatePicker x:Name="dpJoinDate"
                    Margin="10"
                    SelectedDateFormat="Short"
                    SelectedDate="{x:Static sys:DateTime.Now}"
                    />

                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
                    <Button x:Name="btnSave"
                            Content="ذخیره"
                            Width="120"
                            Margin="10"
                            Padding="10,5"
                            Click="saveStaff_click"
                            />
                    <Button x:Name="btnCancel" Content="لغو" Width="120" Margin="10" Padding="10,5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>


        <DataGrid x:Name="staffGrid" 
              Visibility="Hidden"
              Grid.Column="1"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Margin="58,84,351,84">

            <DataGrid.Columns>
                <DataGridTextColumn Header="name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" />
                <DataGridTextColumn Header="PhoneNumber" Binding="{Binding PhoneNumber}" />
                <DataGridTextColumn Header="JoinDate" Binding="{Binding JoinDate}" />
                <DataGridTextColumn Header="Salary" Binding="{Binding Salary}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel x:Name="setingFee" Visibility="Visible" 
          Margin="41,0,471,0" Grid.Column="1" Height="412" VerticalAlignment="Center">

            <ComboBox x:Name="comboBoxVehicleType" Margin="10">
                <!-- to be customized -->
                <ComboBoxItem Content="Car" IsSelected="True"/>
                <ComboBoxItem Content="Motor cycle" />
                <ComboBoxItem Content="Truck" />
                <ComboBoxItem Content="Others" />
            </ComboBox>

            <TextBox x:Name="textBoxFee"
                     MaxLength="50"
                     Margin="10">
            </TextBox>

            <Button Content="set fee"
                    Click="setPayment_Click">
            </Button>
            <DataGrid x:Name="feeDataGrid"
                      AutoGenerateColumns="True"
                      Height="225"
                      Width="347"/>


        </StackPanel>

        <Button Content="set staff" 
                HorizontalAlignment="Left" 
                Height="53" 
                Margin="730,0,0,396" 
                VerticalAlignment="Bottom" 
                Width="132" 
                Click="setStaffClick"
                Grid.Column="1">
        </Button>

        <Button Content="show staff" 
                HorizontalAlignment="Left" 
                Height="53" 
                Margin="730,0,0,130" 
                VerticalAlignment="Bottom" 
                Width="132" 
                Click="showStaff_Click"
                Grid.Column="1">
        </Button>


        <Button Content="parking status" 
                HorizontalAlignment="Left" 
                Height="53" 
                Margin="730,0,0,306" 
                VerticalAlignment="Bottom" 
                Width="132" 
                Click="setStatus_Click"
                Grid.Column="1">
        </Button>

        <Button Content="set parking payment" 
                HorizontalAlignment="Left" 
                Height="53" 
                Margin="730,0,0,218" 
                VerticalAlignment="Bottom" 
                Width="132" 
                
                Grid.Column="1">
        </Button>

        <Label  x:Name="feeLable"
            Grid.Column="1"
               Content="Label"
               HorizontalAlignment="Left"
               Height="41"
               Margin="730,105,0,0"
               VerticalAlignment="Top"
               Width="104"/>

    </Grid>
</Window>
