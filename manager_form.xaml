<Window x:Class="WpfTest.manager_form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="manager form" Height="450" Width="800">
    <Grid>
        
        <StackPanel Margin="20">
            <TextBox x:Name="nameTxt" PlaceholderText="Name" Margin="0 5"/>
            <TextBox x:Name="roleTxt" PlaceholderText="Role" Margin="0 5"/>
            <TextBox x:Name="phoneTxt" PlaceholderText="Phone Number" Margin="0 5"/>
            <DatePicker x:Name="joinDatePicker" Margin="0 5"/>

            <Button Content="Add Staff" Click="AddStaffBtn_Click" Margin="0 10"/>
            <DataGrid x:Name="staffGrid" AutoGenerateColumns="True" Height="200"/>
        </StackPanel>


    </Grid>
</Window>
